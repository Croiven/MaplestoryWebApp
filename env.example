# ===========================================
# MAPLESTORY WEB APP - ENVIRONMENT CONFIG
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://maplestory_user:maplestory_password@localhost:5432/maplestory_db"

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# REACT CLIENT CONFIGURATION
# ===========================================
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME="MapleStory Web App"
VITE_APP_VERSION="1.0.0"
VITE_DISCORD_INVITE_URL="https://discord.gg/your-invite"
VITE_SUPPORT_EMAIL="support@example.com"

# ===========================================
# DISCORD BOT CONFIGURATION
# ===========================================
DISCORD_BOT_TOKEN="your-discord-bot-token-here"
DISCORD_CLIENT_ID="your-discord-client-id-here"
DISCORD_CLIENT_SECRET="your-discord-client-secret-here"
DISCORD_WEBHOOK_URL="your-discord-webhook-url-here"

# Bot Settings
BOT_PREFIX="!"
BOT_OWNER_ID="your-discord-user-id"
BOT_GUILD_ID="your-discord-guild-id"
LOG_LEVEL="info"

# ===========================================
# REDIS CACHE (OPTIONAL)
# ===========================================
REDIS_URL="redis://localhost:6379"

